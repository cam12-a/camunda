<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:id="@+id/mfa_service"
        tools:context=".ChooseMFAType">


    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:layout="@layout/header"
              android:layout_alignParentTop="true"
              class="ru.gui.components.fragments.Header"/>

    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:layout="@layout/content"
              android:layout_centerVertical="true"
              class="ru.gui.components.fragments.Content"/>

    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:layout="@layout/footer"
              android:layout_alignParentBottom="true"
              class="ru.gui.components.fragments.Footer"/>


    />

</RelativeLayout>